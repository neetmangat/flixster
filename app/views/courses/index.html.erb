<br />

<div class="booyah-box col-10 offset-1">
        <h1 class="text-center">Learn something today</h1>
        <hr />
        <br />
        
        <% @courses.each do |course| %>
            <%= link_to course_path(course) do %>
                <h2 class="text-center">
                    <%= course.title %>
                </h2>
                <%= image_tag course.image.url, class: 'img-fluid rounded mx-auto d-block imgdrop' %>
            <% end %>
            <br />
            <div class="row col-12 col-md-10 offset-md-1 col-xl-8 offset-xl-2">
                <div class="col-md-9 col-12">
                    <%= course.description %>
                </div>
                <br />
                <br />
                <div class="col-md-3 col-12 text-center">
                <br>
                    <%= link_to 'More Details...', course_path(course), class: 'btn btn-info' %>
                </div>
            </div>
            <br class="clear" />
            <br />
        <% end %>
</div>