<br />

<div class="booyah-box col-10 offset-1">
    <h1 class="text-center">Learn something today</h1>
    <hr />

    <% @courses.each do |course| %>
        <%= link_to course_path(course) do %>
            <h2 class="text-center">
                <%= course.title %>
            </h2>
            <%= image_tag course.image.url, class: 'img-fluid rounded mx-auto d-block' %>
        <% end %>
        <br />
        <div class="row">
            <div class="col-sm-8 col-12">
                <%= course.description %>
            </div>
            <br />
            <br />
            <div class="col-sm-4 col-12 text-center">
                <%= link_to 'More Details...', course_path(course), class: 'btn btn-info btn-large' %>
            </div>
        </div>
        <br class="clear" />
    <% end %>
</div>