<br />

<% if current_user.courses.present? %>
    <div class="booyah-box col-10 offset-1">
        <h1 class="text-center">What I'm Teaching</h1>
        <hr />
        <div class="row dashboard">    
            <% current_user.courses.each do |course| %>
                <div class="col-12 col-xl-6">
                    <%= link_to course_path(course) do %>
                        <h2 class="text-center">
                            <%= course.title %>
                        </h2>
                        <%= image_tag course.image.url, class: 'img-fluid rounded mx-auto d-block imgdrop' %>
                    <% end %>

                    <br />

                    <div class="container col-12">
                        <div class="row">
                            <div class="col-md-8 col-12">
                                <%= course.description %>
                                <br />
                                <br />
                            </div>

                            <div class="col-md-4 col-12 text-center">
                                <%= link_to 'View Course', course_path(course), class: 'btn btn-info' %>
                            </div>
                        </div>
                    </div>

                    <br class="clear" />
                    <br />
                </div>
            <% end %>
        </div>
    </div>
    <br />
<% end %>

<div class="booyah-box col-10 offset-1">
    <h1 class="text-center">What I'm Learning</h1>
    <hr />
