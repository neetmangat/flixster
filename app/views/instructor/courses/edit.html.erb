<br />
<div class="booyah-box col-10 offset-1">
    <h1 class="text-center">Edit Course</h1>
    <br />

    <%= simple_form_for current_course, url: instructor_course_path, method: :patch do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :cost %>
        <%= f.input :image %>
        <br />
        <%= f.submit "Update", class: 'btn btn-info' %>
        <br />
    <% end %>
    <br />
</div>