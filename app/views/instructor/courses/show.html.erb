<br />
<div class="booyah-box col-10 offset-1">
    <h1 class="text-center"><%= current_course.title %></h1>
    <div class="shadow p-3 mb-5 bg-white rounded">
        <%= image_tag current_course.image.url, class: 'img-fluid rounded mx-auto d-block imgdrop' %>
    </div>
    <br>

    <div class="row">
        <div class="col-12 col-md-4 offset-md-2 text-center">
            <%= link_to 'Preview As Student', course_path(current_course), class: 'btn btn-warning' %>
            <br><br>
        </div>

        <br class="clear">

        <div class="col-12 col-md-4 text-center">
            <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-info' %>    
        </div>
    </div>

    <br>
    <br>

    <div class="col-12 col-lg-8 offset-lg-2">
        <% current_course.sections.each do |section| %>
                <%= section.title %>
                <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-info btn-sm'%>
                <br>
                <ul>
                    <% section.lessons.each do |lesson| %>
                        <li>
                            <b><%= lesson.title %></b>
                            -
                            <%= lesson.subtitle %>
                        </li>
                    <% end %>
                </ul>
                <br class="clear">
        <% end %>
    </div>

</div>