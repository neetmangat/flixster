<br />
<div class="booyah-box col-10 offset-1">
    <h1 class="text-center"><%= current_course.title %></h1>
    <%= image_tag current_course.image.url, class: 'img-fluid rounded mx-auto d-block' %>
    <br>

    <div class="text-center">
        <%= link_to 'Preview As Student', course_path(current_course), class: 'btn btn-warning' %>
    </div>
    <br class="clear">

    <div class="text-center">
        <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-info btn-lg' %>    
    </div>
    <br>
    <br>

    <ul>
        <% current_course.sections.each do |section| %>
            <li>
                <%= section.title %>
                <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-info btn-sm'%>
                <br>
                <ul>
                    <% section.lessons.each do |lesson| %>
                        <li>
                            <b><%= lesson.title %></b>
                            -
                            <%= lesson.subtitle %>
                        </li>
                    <% end %>
                </ul>
                <br class="clear">
            </li>
        <% end %>
    </ul>

</div>